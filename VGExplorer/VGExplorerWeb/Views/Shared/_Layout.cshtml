<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>VGExplorador - Web</title>
    @Styles.Render("~/Default/css")
    @Styles.Render("~/Content/css")
    <!-- Additional settings -->
    <meta name="viewport" content="width=device-width, maximum-scale=1, initial-scale=1, user-scalable=0" />

    <!--[if lt IE 9]>
      <script src="https://oss.maxcdn.com/libs/respond.js/1.3.0/respond.min.js"></script>
      <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
    <![endif]-->
    @RenderSection("styles", required: false)
</head>
<body>
    <header style="clear: both; margin-bottom: 5%;">
        <div class="navbar navbar-inverse navbar-fixed-top" role="navigation">
            <div class="container">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target=".navbar-collapse">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <a class="navbar-brand" href="#">VGExplorer</a>
                </div>
                <div class="navbar-collapse collapse">
                    <ul class="nav navbar-nav">
                        <li>@Html.ActionLink("Home", "Index", "Home")</li>
                        <li>@Html.ActionLink("Acerca de", "About", "Home")</li>
                    </ul>
                </div>
            </div>
        </div>
    </header>
    <section>
        @RenderBody()
    </section>

    <footer class="panel">

        <div id="content-footer" class="content">
            <div class="text-center">
                <a href="/Home/About#about">Acerca de</a>
                <a href="#">Ayuda</a>
                <a href="/Home/About#privacy">Privacidad</a>
                <a href="#">Términos y Condiciones</a>
            </div>
        </div>

        <span class="clearfix">VGExplorer Web v1.0 | 20140626</span>
        <span class="text-center">Copyright © <a href="#">Corderoski</a>. Todos los derechos reservados.</span>
    </footer>

    @Scripts.Render("~/bundles/js")
    @RenderSection("scripts", required: false)
</body>
</html>
